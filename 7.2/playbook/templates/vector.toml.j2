data_dir = "{{ vector_env_path }}"

# Input data. Change me to a valid input source.
[sources.in]
  type = "stdin"


# Output data
[sinks.to_clickhouse]
  type     = "clickhouse"
  inputs   = ["in"]
  endpoint = "http://10.0.1.5:8123"
  database = "logs"
  table    = "tlogs"
